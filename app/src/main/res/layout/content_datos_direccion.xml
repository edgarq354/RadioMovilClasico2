        />


</LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/submit"
        android:text="GUARDAR"
        android:layout_gravity="bottom"
        android:layout_margin="15sp"
        android:id="@+id/bt_guardar"
        />
</FrameLayout>