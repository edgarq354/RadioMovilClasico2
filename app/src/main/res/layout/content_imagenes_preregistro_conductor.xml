<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".preregistro.Imagenes_preregistro_conductor"
    tools:showIn="@layout/activity_imagenes_preregistro_conductor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Al subir todas las fotos habras completado tu registro."
                android:textSize="20sp"
                android:layout_margin="15sp"
                android:gravity="center"
                android:textColor="@color/colorAccent_presion"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:drawable/alert_light_frame"
                android:layout_marginTop="10sp"
                android:padding="15sp"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="Foto de perfil"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    android:background="@drawable/ic_camara"
                    android:id="@+id/im_perfil_conductor"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="Agregar una imagen de perfil del conductor"
                    />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:drawable/alert_light_frame"
                android:layout_marginTop="10sp"
                android:padding="15sp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Foto de Carnet (Adelante)"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    android:background="@drawable/ic_camara"
                    android:id="@+id/im_imagen_carnet_1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="Agregar una imagen de la parte delantera del carnet"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:drawable/alert_light_frame"
                android:layout_marginTop="10sp"
                android:padding="15sp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Foto de Carnet (Detras)"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    android:background="@drawable/ic_camara"
                    android:id="@+id/im_imagen_carnet_2"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="Agregar una imagen de la parte detras del carnet"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:drawable/alert_light_frame"
                android:layout_marginTop="10sp"
                android:padding="15sp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Foto de Licencia (Adelante)"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    android:background="@drawable/ic_camara"
                    android:id="@+id/im_imagen_licencia_1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="Agregar una imagen de la parte delantera de su licencia."
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:drawable/alert_light_frame"
                android:layout_marginTop="10sp"
                android:padding="15sp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Foto de Licencia(Detras)"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200sp"
                    android:background="@drawable/ic_camara"
                    android:id="@+id/im_imagen_licencia_2"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="Agregar una imagen de la parte detras de su licencia"
                    />

            </LinearLayout>






        </LinearLayout>

    </ScrollView>
</FrameLayout>