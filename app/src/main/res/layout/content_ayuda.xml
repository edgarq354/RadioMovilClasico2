<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".informacion.Ayuda"
    tools:showIn="@layout/activity_ayuda"
    android:orientation="vertical"
    >


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:padding="10sp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50sp"
                android:orientation="vertical">




                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100sp"
                    android:src="@drawable/ic_logo_conductor"
                    android:layout_marginBottom="15sp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5sp"
                    style="@style/submit4"
                    android:id="@+id/ll_que_hago_luego"
                    >
                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:layout_marginTop="40sp"
                        android:background="@drawable/ic_documento_celeste"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="¿Qué hago luego de registrarme?"
                        android:gravity="center|left"
                        android:textColor="@color/colorAccent_presion"
                        android:layout_marginLeft="5sp"
                        android:textSize="20sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5sp"
                    style="@style/submit4"
                    android:id="@+id/ll_sin_solicitud"
                    >
                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:background="@drawable/ic_advertencia"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="No puedo usar la app"
                        android:gravity="center|left"
                        android:textColor="@color/colorAccent_presion"
                        android:layout_marginLeft="5sp"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:orientation="horizontal"
                    style="@style/submit4"
                    android:id="@+id/ll_bloqueos"
                    >
                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:background="@drawable/ic_candado_rojo"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Bloqueos"
                        android:gravity="center|left"
                        android:textColor="@color/colorAccent_presion"
                        android:layout_marginLeft="5sp"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5sp"
                    style="@style/submit4"
                    android:id="@+id/ll_calificacion"
                    >
                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/ic_conductor_estrella"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Calificación de conductores y pasajeros"
                        android:gravity="center|left"
                        android:textColor="@color/colorAccent_presion"
                        android:layout_marginLeft="5sp"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5sp"
                    style="@style/submit4"
                    android:id="@+id/ll_reporte"
                    >
                    <ImageView
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/ic_reporte"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Reporte de calificacion para conductor"
                        android:gravity="center|left"
                        android:textColor="@color/colorAccent_presion"
                        android:layout_marginLeft="5sp"
                        android:textSize="20sp" />
                </LinearLayout>






            </LinearLayout>

        </ScrollView>



</LinearLayout>