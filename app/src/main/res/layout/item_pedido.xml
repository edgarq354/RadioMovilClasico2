<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3sp"
    >


        <LinearLayout
            android:id="@+id/box_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/post_border_background"
            android:orientation="vertical"
            android:padding="5sp"
            >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_nombre"
            android:text="Nombre"
            android:textColor="#000"
            android:textSize="20sp"
            android:gravity="left"
            android:layout_weight="1"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_direccion"
        android:text="Direccion"
        android:textSize="15sp"
        />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_clase_vehiculo"
                    android:text="CLASE DE VEHICULO"
                    android:layout_weight="1"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                >
                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:src="@mipmap/ic_calificacion_conductor"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_calificacion_conductor"
                    android:text="CONDUCTOR"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    />

                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:src="@mipmap/ic_calificacion_vehiculo"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_calificacion_vehiculo"
                    android:text="VEHICULO"
                    android:textStyle="bold"
                    android:layout_weight="1"

                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_billetera"
                android:text="Billetera: BOB 0.0"
                android:layout_weight="1"
                android:textColor="@color/colorIcons"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_fecha"
                    android:text="FECHA"
                    android:layout_weight="1"
                    android:textColor="@color/colorIcons"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_estado"
                    android:text="COMPLETADO"
                    android:gravity="right"
                    android:textColor="@color/colorIcons"
                    android:padding="5sp"
                    />
            </LinearLayout>
        </LinearLayout>



</LinearLayout>
