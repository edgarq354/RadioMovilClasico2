<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escribe alguna referencia"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorTextoBoton"
        android:padding="10sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_tipo_pedido"
        android:gravity="center"
        android:textColor="@color/colorPrimary_text"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:text="¿Donde desea solicitar su movil?"
        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="0sp"
        >

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="En mi ubicación."
            android:id="@+id/rb_en_mi_ubicacion"
            android:layout_weight="1"
            android:checked="true"
            />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Donde deseo ir."
            android:id="@+id/rb_donde_deseo_ir"
            />

    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="5sp"
        android:paddingRight="5sp"
        android:paddingLeft="5sp"
        android:background="@drawable/presentacion"
        >



        <EditText
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:text=""
            android:hint="Introduzca una referencia (Ej. zona Pampa de la Isla )"
            android:id="@+id/et_referencia"
            android:inputType="text|textMultiLine"
            android:gravity="top"
            />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CANCELAR"
            style="@style/submit3"
            android:id="@+id/bt_cancelar"
            android:layout_margin="1sp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="CONFIRMAR"
            style="@style/submit2"
            android:id="@+id/bt_pedir"
            android:layout_margin="1sp"
            />

    </LinearLayout>


</LinearLayout>