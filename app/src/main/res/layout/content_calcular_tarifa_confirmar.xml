<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.elisoft.radiomovilclasico.menu_otra_direccion.Calcular_tarifa_confirmar"
    tools:showIn="@layout/activity_calcular_tarifa_confirmar"
    android:orientation="vertical"
    android:background="@color/colorTextoBoton"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >



    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.grayhartcorp.quevengan.Menu_p"
        android:layout_weight="0.9"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10sp"
                android:background="@color/colorPrimary_light_bajito"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Distancia"
                        android:id="@+id/tv_distancia"
                        android:textColor="@color/colorIcons"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0 mt"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:id="@+id/tv_monto_distancia"
                        android:textColor="@color/colorIcons"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tiempo"
                        android:id="@+id/tv_tiempo"
                        android:textColor="@color/colorIcons"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0 min"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:id="@+id/tv_monto_tiempo"
                        android:textColor="@color/colorIcons"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Capacidad"
                        android:textColor="@color/colorIcons"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4 Personas"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/colorIcons"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mi Billetera"
                        android:textColor="@color/colorIcons"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0 BOB"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/colorIcons"
                        android:id="@+id/tv_billetera"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|center"
                android:layout_gravity="center|left"

                >
                <TextView
                    android:layout_marginRight="15sp"
                    android:layout_marginLeft="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bs:"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ofreza su tarifa"
                    android:text=""
                    android:inputType="number"
                    android:layout_weight="1"
                    android:id="@+id/tv_tarifa_normal"
                    android:textColor="@color/colorIcons"
                    android:textSize="30sp"
                    />
            </LinearLayout>
            <TextView
                android:layout_marginRight="15sp"
                android:layout_marginLeft="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Esta tarifa se basa en nuestra estimaciÃ³n. Esto puede variar durante el viaje y la tarifa final."
                />

            <CheckBox
                android:id="@+id/cb_tipo_pedido_empresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Usar Billetera"
                android:padding="5sp"
               android:background="@drawable/disenio"
                android:layout_marginRight="15sp"
                android:layout_marginLeft="15sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:layout_marginRight="15sp"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="15sp"
                android:orientation="vertical"
                style="@style/submit7"
                android:id="@+id/pedir_movil"
                android:layout_weight="1"
                >



                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="SOLICITAR AHORA"
                        android:textColor="@color/colorTextoBoton"
                        android:textSize="20sp"
                        android:padding="10sp"
                        />





            </LinearLayout>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >



                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="0sp"
                        android:orientation="vertical"
                        style="@style/submit7"
                        android:id="@+id/pedir_movil_lujo"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="DE LUJO"
                            android:textColor="@color/colorTextoBoton"
                            />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_movil_lujo"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="0sp"
                        android:orientation="vertical"
                        style="@style/submit7"
                        android:id="@+id/pedir_movil_aire"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0 Bs"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/colorIcons"
                            android:id="@+id/tv_tarifa_con_aire"
                            android:textSize="30sp"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_movil_aire"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="CON AIRE"
                                android:textColor="@color/colorTextoBoton"
                                />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="0sp"
                        android:orientation="vertical"
                        style="@style/submit7"
                        android:id="@+id/pedir_movil_maletero"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0 Bs"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:id="@+id/tv_tarifa_maletero"
                            android:textColor="@color/colorIcons"
                            android:textSize="30sp"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_movil_maletero"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="MALETERO"
                                android:textColor="@color/colorTextoBoton"
                                />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="0sp"
                        android:orientation="vertical"
                        style="@style/submit7"
                        android:id="@+id/pedir_movil_pedido"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="PEDIDO"
                            android:textColor="@color/colorTextoBoton"
                            />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_movil_pedido"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="0sp"
                        android:orientation="vertical"
                        style="@style/submit7"
                        android:id="@+id/pedir_movil_reserva"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="RESERVAR"
                            android:textColor="@color/colorTextoBoton"
                            />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_movil_reserva"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="0sp"
                        android:orientation="vertical"
                        style="@style/submit7"
                        android:id="@+id/pedir_moto"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="MOTO"
                            android:textColor="@color/colorTextoBoton"
                            />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_moto"/>
                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:orientation="vertical"
                android:padding="10sp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DE LUJO"
                        android:textColor="@color/colorAccent_presion"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="monto"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:id="@+id/tv_tarifa_de_lujo"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="UN MOVIL CON PEDIDO"
                        android:textColor="@color/colorAccent_presion"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="monto"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:id="@+id/tv_tarifa_con_pedido"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CON RESERVA"
                        android:textColor="@color/colorAccent_presion"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="monto"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:id="@+id/tv_tarifa_con_reserva"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="UNA MOTO"
                        android:textColor="@color/colorAccent_presion"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="monto"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:id="@+id/tv_tarifa_moto"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="UNA MOTO CON PEDIDO"
                        android:textColor="@color/colorAccent_presion"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="monto"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:id="@+id/tv_tarifa_moto_pedido"
                        />
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
    </ScrollView>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5sp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimary_text"
            android:padding="5sp"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"


            >

            <ImageView
                android:layout_width="30sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:src="@mipmap/ic_punto_inicio"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Punto inicio"
                    android:id="@+id/tv_punto_inicio"
                    android:gravity="center"
                    android:textColor="@color/colorTextoBoton"
                    />
            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/buscar_direccion"

            android:padding="10sp"
            android:layout_marginTop="-8sp"
            android:layout_marginRight="-8sp"
            android:layout_marginLeft="-8sp"
            android:background="@android:drawable/dialog_holo_light_frame"

            >

            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginLeft="5sp"
                android:background="@mipmap/ic_punto_fin"
                />


            <TextView
                android:text="Punto final"
                android:id="@+id/tv_punto_final"
                android:textColor="@color/colorIcons"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                />





        </LinearLayout>

    </LinearLayout>
</FrameLayout>