<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".registro_inicio_sesion.Opcion_inicio_sesion"
    tools:showIn="@layout/activity_opcion_inicio_sesion"
    android:orientation="vertical"
    android:background="#1e2b24"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_fondo"
        android:layout_weight="1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CREAR CUENTA"
            android:layout_weight="1"
            style="@style/submit2"
            android:onClick="crear_cuenta"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YA TENGO CUENTA"
            android:layout_weight="1"
            style="@style/submit3"
            android:onClick="ya_tengo"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/condiciones"
        android:gravity="center"
        android:textColor="@color/colorAccent"

        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:onClick="terminos_condiciones"
        />

</LinearLayout>