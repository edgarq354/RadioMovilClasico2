<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.elisoft.radiomovilclasico_conductor.Datos_vehiculo"
    tools:showIn="@layout/activity_datos_vehiculo">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/tv_placa"
        android:text="placa"
        android:textSize="25sp"
        android:textColor="@color/colorPrimary_text"
        android:layout_margin="10sp"
        android:padding="15sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Imagenes del vehÃ­culo:"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary_text"
        android:layout_margin="10sp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <ImageView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="250sp"
                android:id="@+id/im_uno"
                android:layout_margin="5sp"
                />
            <ImageView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="250sp"
                android:id="@+id/im_dos"
                android:layout_margin="5sp"
                />
            <ImageView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="250sp"
                android:id="@+id/im_tres"
                android:layout_margin="5sp"
                />
            <ImageView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="250sp"
                android:id="@+id/im_cuatro"
                android:layout_margin="5sp"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
