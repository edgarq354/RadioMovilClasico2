<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:gravity="left|center"
            android:padding="0sp"
            android:text="Contactate con la Central:"
            android:textColor="#fff"
            android:textSize="15sp"
            android:textStyle="bold"
            android:drawableLeft="@mipmap/ic_empresa"
            />

        <Button
            android:id="@+id/bt_llamada_empresa"
            style="@style/submit5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0sp"
            android:padding="0sp"
            android:gravity="left|center"
            android:drawableLeft="@mipmap/ic_celular"
            android:text="llamanos" />



        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bt_whatsapp_empresa"
            android:text="WHATSAPP"
            style="@style/submit5"
            android:gravity="left|center"
            android:drawableLeft="@mipmap/ic_whatsapp"
            android:layout_margin="0sp"
            />




        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bt_ninguna"
            android:text="NINGUNA"
            style="@style/submit5"
            android:layout_margin="0sp"
            />
    </LinearLayout>
</ScrollView>
