<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.elisoft.taxicorp.panico.Notificacion_panico"
        tools:showIn="@layout/activity_notificacion_panico">

        <fragment
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/ll_perfil"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/im_cerrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:src="@mipmap/ic_cerrar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--DATOS DEL CONDUCTOR  -->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="( CONDUCTOR )"
                    android:textStyle="bold|italic"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    />

                <TextView
                    android:id="@+id/tv_nombre_conductor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NOMBRE"
                    android:paddingLeft="5sp"
                    android:textColor="@color/colorPrimary_light"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/im_perfil_conductor"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:layout_marginBottom="15sp"
                        android:src="@mipmap/ic_perfil" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="5sp">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MARCA: "
                                android:textColor="@color/colorPrimary_light" />

                            <TextView
                                android:id="@+id/tv_marca_conductor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/colorPrimary_light"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="5sp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="PLACA: "
                                android:textColor="@color/colorPrimary_light" />

                            <TextView
                                android:id="@+id/tv_placa_conductor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/colorPrimary_light"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="5sp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="COLOR: "
                                android:textColor="@color/colorPrimary_light" />

                            <TextView
                                android:id="@+id/tv_color_conductor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/colorPrimary_light"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_celular_conductor"
                            style="@style/submit3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/ic_celular"
                            android:gravity="center|left"
                            android:text=""
                            android:textColor="@color/colorPrimary_light"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>





                <!--DATOS DEL PASAJERO  -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="( PASAJERO CON PANICO )"
                    android:textStyle="bold|italic"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    />

                <TextView
                    android:id="@+id/tv_nombre_pasajero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NOMBRE"
                    android:paddingLeft="5sp"
                    android:textColor="@color/colorPrimary_light"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/im_perfil_pasajero"
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:layout_marginBottom="15sp"
                        android:src="@mipmap/ic_perfil" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_celular_pasajero"
                            style="@style/submit3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/ic_celular"
                            android:gravity="center|left"
                            android:text=""
                            android:textColor="@color/colorPrimary_light"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </ScrollView>
    </LinearLayout>
</FrameLayout>

